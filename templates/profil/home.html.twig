{% extends 'guest/base.html.twig' %}

{% block main %}

<section class="product-form-section">
  <div class="form-wrapper">
    <h1>Créer une experience</h1>

    <form method="POST" enctype="multipart/form-data" class="product-form" action="{{ path('profil_home') }}">
      <label>
        Titre
        <input type="text" name="title" required>
      </label>

      <label>
        Description
        <textarea name="description" rows="4" required></textarea>
      </label>

      <label class="checkbox-label">
        <input type="checkbox" name="is-published">
        Profil public ?
      </label>

      <label>
        Photos voyages
        <input type="file" name="image" accept="image/*">
      </label>

      <button type="submit">Créer l'experience</button>
    </form>
  </div>
</section>



{% endblock %}
